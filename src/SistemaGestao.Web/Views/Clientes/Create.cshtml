@model SistemaGestao.Web.Models.ClienteViewModel

@{
    ViewData["Title"] = "Novo Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus"></i> Cadastrar Novo Cliente
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="formCliente">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">
                                <i class="bi bi-building"></i> Nome da Empresa *
                            </label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome da empresa"
                                required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> E-mail *
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="email@exemplo.com"
                                required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Telefone -->
                        <div class="mb-3">
                            <label asp-for="Telefone" class="form-label fw-bold">
                                <i class="bi bi-telephone"></i> Telefone
                            </label>
                            <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <!-- Upload de Logotipo -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-image"></i> Logotipo da Empresa
                            </label>
                            <input type="file" asp-for="LogotipoUpload" class="form-control" accept="image/*"
                                id="logoUpload" onchange="previewImage(event)" />
                            <small class="text-muted">Formatos aceitos: JPG, PNG, GIF (Max: 5MB)</small>
                            <span asp-validation-for="LogotipoUpload" class="text-danger d-block"></span>

                            <!-- Preview da Imagem -->
                            <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                                <p class="text-muted mb-2">Preview:</p>
                                <img id="preview" src="#" alt="Preview" class="img-thumbnail"
                                    style="max-width: 300px; max-height: 300px;" />
                            </div>
                        </div>

                        <!-- Logradouros (Seção Dinâmica) -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label fw-bold mb-0">
                                    <i class="bi bi-geo-alt"></i> Endereços
                                </label>
                                <button type="button" class="btn btn-sm btn-outline-primary"
                                    onclick="adicionarEndereco()">
                                    <i class="bi bi-plus"></i> Adicionar Endereço
                                </button>
                            </div>
                            <div id="containerEnderecos">
                                <!-- Endereços serão adicionados aqui dinamicamente -->
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let enderecoIndex = 0;

        // Preview da imagem antes de fazer upload
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Validar tamanho (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('A imagem deve ter no máximo 5MB!');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        // Adicionar novo campo de endereço
        function adicionarEndereco() {
            const container = document.getElementById('containerEnderecos');
            const index = enderecoIndex++;

            const enderecoHtml = `
                                <div class="card mb-3 endereco-item" id="endereco-${index}">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <h6 class="mb-0">Endereço ${index + 1}</h6>
                                            <button type="button" 
                                                    class="btn btn-sm btn-danger" 
                                                    onclick="removerEndereco(${index})">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8 mb-2">
                                                <input type="text" 
                                                       name="Logradouros[${index}].Endereco" 
                                                       class="form-control form-control-sm" 
                                                       placeholder="Rua, Avenida..." 
                                                       required />
                                            </div>
                                            <div class="col-md-4 mb-2">
                                                <input type="text" 
                                                       name="Logradouros[${index}].Complemento" 
                                                       class="form-control form-control-sm" 
                                                       placeholder="Complemento" />
                                            </div>
                                            <div class="col-md-5 mb-2">
                                                <input type="text" 
                                                       name="Logradouros[${index}].Bairro" 
                                                       class="form-control form-control-sm" 
                                                       placeholder="Bairro" 
                                                       required />
                                            </div>
                                            <div class="col-md-5 mb-2">
                                                <input type="text" 
                                                       name="Logradouros[${index}].Cidade" 
                                                       class="form-control form-control-sm" 
                                                       placeholder="Cidade" 
                                                       required />
                                            </div>
                                            <div class="col-md-2 mb-2">
                                                <input type="text" 
                                                       name="Logradouros[${index}].Estado" 
                                                       class="form-control form-control-sm" 
                                                       placeholder="UF" 
                                                       maxlength="2" 
                                                       required />
                                            </div>
                                            <div class="col-md-12">
                                                <input type="text" 
                                                       name="Logradouros[${index}].CEP" 
                                                       class="form-control form-control-sm cep-mask" 
                                                       placeholder="CEP (00000-000)" 
                                                       required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;

            container.insertAdjacentHTML('beforeend', enderecoHtml);
        }

        // Remover endereço
        function removerEndereco(index) {
            document.getElementById(`endereco-${index}`).remove();
        }

        // Adicionar primeiro endereço ao carregar a página
        document.addEventListener('DOMContentLoaded', function () {
            adicionarEndereco();
        });
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
