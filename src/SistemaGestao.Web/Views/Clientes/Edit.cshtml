@model SistemaGestao.Web.Models.ClienteViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editar Cliente
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">
                                <i class="bi bi-building"></i> Nome da Empresa *
                            </label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> E-mail *
                            </label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Telefone -->
                        <div class="mb-3">
                            <label asp-for="Telefone" class="form-label fw-bold">
                                <i class="bi bi-telephone"></i> Telefone
                            </label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <!-- Logotipo Atual -->
                        @if (!string.IsNullOrEmpty(Model?.LogotipoBase64))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Logotipo Atual</label>
                                <div class="text-center">
                                    <img src="data:image/png;base64,@Model.LogotipoBase64" alt="Logotipo Atual"
                                        class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            </div>
                        }

                        <!-- Upload de Novo Logotipo -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-image"></i> Alterar Logotipo
                            </label>
                            <input type="file" asp-for="LogotipoUpload" class="form-control" accept="image/*"
                                id="logoUpload" onchange="previewImage(event)" />
                            <small class="text-muted">Deixe em branco para manter o logotipo atual</small>

                            <!-- Preview da Nova Imagem -->
                            <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                                <p class="text-muted mb-2">Novo Preview:</p>
                                <img id="preview" src="#" alt="Preview" class="img-thumbnail"
                                    style="max-width: 300px; max-height: 300px;" />
                            </div>
                        </div>

                        <!-- Logradouros -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label fw-bold mb-0">
                                    <i class="bi bi-geo-alt"></i> Endereços
                                </label>
                                <button type="button" class="btn btn-sm btn-outline-primary"
                                    onclick="adicionarEndereco()">
                                    <i class="bi bi-plus"></i> Adicionar Endereço
                                </button>
                            </div>
                            <div id="containerEnderecos">
                                @if (Model?.Logradouros != null && Model.Logradouros.Any())
                                {
                                    @for (int i = 0; i < Model.Logradouros.Count; i++)
                                    {
                                        <div class="card mb-3 endereco-item" id="endereco-@i">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <h6 class="mb-0">Endereço @(i + 1)</h6>
                                                    <button type="button" class="btn btn-sm btn-danger"
                                                        onclick="removerEndereco(@i)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                                <input type="hidden" name="Logradouros[@i].Id"
                                                    value="@Model.Logradouros[i].Id" />
                                                <div class="row">
                                                    <div class="col-md-8 mb-2">
                                                        <input type="text" name="Logradouros[@i].Endereco"
                                                            value="@Model.Logradouros[i].Endereco"
                                                            class="form-control form-control-sm" placeholder="Rua, Avenida..."
                                                            required />
                                                    </div>
                                                    <div class="col-md-4 mb-2">
                                                        <input type="text" name="Logradouros[@i].Complemento"
                                                            value="@Model.Logradouros[i].Complemento"
                                                            class="form-control form-control-sm" placeholder="Complemento" />
                                                    </div>
                                                    <div class="col-md-5 mb-2">
                                                        <input type="text" name="Logradouros[@i].Bairro"
                                                            value="@Model.Logradouros[i].Bairro"
                                                            class="form-control form-control-sm" placeholder="Bairro"
                                                            required />
                                                    </div>
                                                    <div class="col-md-5 mb-2">
                                                        <input type="text" name="Logradouros[@i].Cidade"
                                                            value="@Model.Logradouros[i].Cidade"
                                                            class="form-control form-control-sm" placeholder="Cidade"
                                                            required />
                                                    </div>
                                                    <div class="col-md-2 mb-2">
                                                        <input type="text" name="Logradouros[@i].Estado"
                                                            value="@Model.Logradouros[i].Estado"
                                                            class="form-control form-control-sm" placeholder="UF" maxlength="2"
                                                            required />
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input type="text" name="Logradouros[@i].CEP"
                                                            value="@Model.Logradouros[i].CEP"
                                                            class="form-control form-control-sm" placeholder="CEP" required />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let enderecoIndex = @(Model?.Logradouros?.Count ?? 0);

        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                if (file.size > 5 * 1024 * 1024) {
                    alert('A imagem deve ter no máximo 5MB!');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function adicionarEndereco() {
            const container = document.getElementById('containerEnderecos');
            const index = enderecoIndex++;

            const enderecoHtml = `
                    <div class="card mb-3 endereco-item" id="endereco-${index}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h6 class="mb-0">Endereço ${index + 1}</h6>
                                <button type="button" class="btn btn-sm btn-danger" onclick="removerEndereco(${index})">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <div class="row">
                                <div class="col-md-8 mb-2">
                                    <input type="text" name="Logradouros[${index}].Endereco" class="form-control form-control-sm" placeholder="Rua, Avenida..." required />
                                </div>
                                <div class="col-md-4 mb-2">
                                    <input type="text" name="Logradouros[${index}].Complemento" class="form-control form-control-sm" placeholder="Complemento" />
                                </div>
                                <div class="col-md-5 mb-2">
                                    <input type="text" name="Logradouros[${index}].Bairro" class="form-control form-control-sm" placeholder="Bairro" required />
                                </div>
                                <div class="col-md-5 mb-2">
                                    <input type="text" name="Logradouros[${index}].Cidade" class="form-control form-control-sm" placeholder="Cidade" required />
                                </div>
                                <div class="col-md-2 mb-2">
                                    <input type="text" name="Logradouros[${index}].Estado" class="form-control form-control-sm" placeholder="UF" maxlength="2" required />
                                </div>
                                <div class="col-md-12">
                                    <input type="text" name="Logradouros[${index}].CEP" class="form-control form-control-sm" placeholder="CEP" required />
                                </div>
                            </div>
                        </div>
                    </div>
                `;

            container.insertAdjacentHTML('beforeend', enderecoHtml);
        }

        function removerEndereco(index) {
            document.getElementById(`endereco-${index}`).remove();
        }
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
